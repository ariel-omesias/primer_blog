<h1 class="text-center mb-5 py-5"> Listado de posts </h1>


<table class="table">
    <tr>
        <th>Titulo</th>
        <th>Fecha de ingreso</th>
        <th>Imagen</th>
        <th>Contenido</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= time_tag(post.created_at) %></td>
            <td><%= image_tag(post.image_url, style: 'width:100px') %></td>
            <td><%= post.content %></td>
        </tr>

    <% end %>
</table>

