<div class="container pt-5 mt-5">
    <%= form_with(model: @post, local: true, html: { id: 'create_posts'}) do |form| %>

        <div class="form-group">
            <%= form.label :title %><br />
            <%= form.text_field :title, required: true, :class => 'form-control' %>
        </div>
        
        <div class="form-group">
            <%= form.label :image_url %><br />
            <%= form.text_field :image_url, required: true, :class => 'form-control'%>
        </div>
        
        <div class="form-group mb-5">
            <%= form.label :content %><br />
            <%= form.text_area :content, required: true, :class => 'form-control'%>
        </div>
        

            <%= form.submit "Publicar", :class => "btn btn-primary" %>

    <% end %>

</div>